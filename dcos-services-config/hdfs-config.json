{
  "properties": {
    "data_node": {
      "description": "HDFS configuration properties.",
      "properties": {
        "count": {
          "default": 3,
          "description": "Data node count requirement",
          "type": "number"
        },
        "cpus": {
          "default": 0.3,
          "description": "Data node CPU requirement",
          "type": "number"
        },
        "disk": {
          "default": 5000,
          "description": "Data node disk size requirement in MB",
          "type": "number"
        },
        "mem": {
          "default": 1024,
          "description": "Data node memory requirement",
          "type": "number"
        },
        "placement": {
          "default": "[]",
          "description": "Placement constraints for data nodes (e.g., [[\"hostname\", \"UNIQUE\"]]).",
          "media": {
            "type": "application/x-zone-constraints+json"
          },
          "type": "string"
        }
      }
    },
    "hdfs": {
      "description": "HDFS File System configuration options",
      "properties": {
        "blocksize": {
          "default": "134217728",
          "description": "The default block size for new files, in bytes. You can use the following suffix (case insensitive): k(kilo), m(mega), g(giga), t(tera), p(peta), e(exa) to specify the size (such as 128k, 512m, 1g, etc.), Or provide complete size in bytes (such as 134217728 for 128 MB).",
          "type": "string"
        },
        "hadoop_hdfs_configuration_version": {
          "default": "1",
          "description": "version of this configuration file",
          "type": "string"
        },
        "hadoop_heapsize": {
          "default": 512,
          "description": "The maximum amount of heap to use, in MB.",
          "type": "integer"
        },
        "hadoop_root_logger": {
          "default": "INFO,console",
          "description": "",
          "type": "string"
        },
        "replication": {
          "default": "3",
          "description": "Default block replication. The actual number of replications can be specified when the file is created. The default is used if replication is not specified in create time.",
          "type": "string"
        }
      }
    },
    "journal_node": {
      "description": "HDFS configuration properties.",
      "properties": {
        "cpus": {
          "default": 0.3,
          "description": "Journal node CPU requirement",
          "type": "number"
        },
        "disk": {
          "default": 5000,
          "description": "Journal node disk size requirement in MB",
          "type": "number"
        },
        "disk_type": {
          "default": "ROOT",
          "description": "Journal node disk type",
          "enum": [
            "ROOT",
            "MOUNT"
          ],
          "type": "string"
        },
        "mem": {
          "default": 1024,
          "description": "Journal node memory requirement",
          "type": "number"
        },
        "placement": {
          "default": "[]",
          "description": "Placement constraints for journal nodes (e.g., [[\"hostname\", \"UNIQUE\"]]).",
          "media": {
            "type": "application/x-zone-constraints+json"
          },
          "type": "string"
        }
      }
    },
    "name_node": {
      "description": "HDFS configuration properties.",
      "properties": {
        "cpus": {
          "default": 0.3,
          "description": "Name node CPU requirement",
          "type": "number"
        },
        "disk": {
          "default": 5000,
          "description": "Name node disk size requirement in MB",
          "type": "number"
        },
        "disk_type": {
          "default": "ROOT",
          "description": "Name node disk type",
          "type": "string"
        },
        "hadoop_namenode_opts": {
          "default": "",
          "description": "JVM options to specify when running the name node. This overrides HADOOP_HEAPSIZE Xmx value for the name nodes.",
          "type": "string"
        },
        "logging_level": {
          "default": "info",
          "description": "The logging level for dfs namenode. Other values are 'dir' (trace namespace mutations), 'block'' (trace block under/over replications and block creations/deletions), or 'all'.",
          "enum": [
            "info",
            "dir",
            "block",
            "all"
          ],
          "type": "string"
        },
        "mem": {
          "default": 1024,
          "description": "Name node memory requirement",
          "type": "number"
        },
        "placement": {
          "default": "[]",
          "description": "Placement constraints for name nodes (e.g., [[\"hostname\", \"UNIQUE\"]]).",
          "media": {
            "type": "application/x-zone-constraints+json"
          },
          "type": "string"
        }
      }
    },
    "service": {
      "description": "DC/OS service configuration properties",
      "properties": {
        "check": {
          "description": "Health check used to determine the scheduler health based on the status of the scheduler plans.",
          "properties": {
            "delaySeconds": {
              "default": 15,
              "description": "An amount of time in seconds to wait before starting the check attempts.",
              "minimum": 15,
              "type": "integer"
            },
            "intervalSeconds": {
              "default": 30,
              "description": "The period in seconds to wait after the last check has completed to start the next check.",
              "minimum": 30,
              "type": "integer"
            },
            "timeoutSeconds": {
              "default": 20,
              "description": " An amount of time in seconds to wait for check to succeed.",
              "minimum": 20,
              "type": "integer"
            }
          },
          "type": "object"
        },
        "deploy_strategy": {
          "default": "parallel",
          "description": "HDFS deployment strategy. [parallel, serial]",
          "enum": [
            "parallel",
            "serial"
          ],
          "type": "string"
        },
        "log_level": {
          "default": "INFO",
          "description": "The log level for the DC/OS service.",
          "enum": [
            "OFF",
            "FATAL",
            "ERROR",
            "WARN",
            "INFO",
            "DEBUG",
            "TRACE",
            "ALL"
          ],
          "type": "string"
        },
        "name": {
          "default": "hdfs",
          "description": "Unique name for the service instance consisting of a series of words separated by slashes. Each word must be at least 1 alphanumeric character and may only contain digits (`0-9`), dashes (`-`), dots (`.`), and lowercase letters (`a-z`). The word may not begin or end with a dash",
          "pattern": "^(\\/?((\\.\\.)|(([a-z0-9]|[a-z0-9][a-z0-9\\-]*[a-z0-9])\\.)*([a-z0-9]|[a-z0-9][a-z0-9\\-]*[a-z0-9]))?($|\\/))+$",
          "type": "string"
        },
        "region": {
          "default": "",
          "description": "All HDFS nodes will run in this region.  When no region is specified the nodes are constrained to the local region.",
          "media": {
            "type": "application/x-region+string"
          },
          "type": "string"
        },
        "virtual_network_name": {
          "default": "dcos",
          "description": "The name of the virtual network to join",
          "type": "string"
        }
      },
      "type": "object"
    },
    "zkfc_node": {
      "description": "HDFS configuration properties.",
      "properties": {
        "cpus": {
          "default": 0.3,
          "description": "ZKFC node CPU requirement",
          "type": "number"
        },
        "mem": {
          "default": 1024,
          "description": "ZKFC node memory requirement",
          "type": "number"
        }
      }
    }
  }
}
